<% include ../../views/partials/header %>

<table width="80%" border="0" id="users">

	<tr style='text-align:left; background-color:#CCC'>
		<th id="name">Nome</th>
		<th id="username">Usu√°rio</th>
		<th>Action</th>
	</tr>

  <% if (data) { %>
	<% data.forEach(function(user){ %>
		<tr>
			<td id="name"><%= user.name %></td>
			<td id="username"><%= user.username %></td>
			<td>
				<div style="float:left">
					<a href='/user/edit/<%= user.id %>'>Edit</a> &nbsp;
					<form method="post" action="/users/delete/<%= user.id %>" style="float:right">
						<input type="submit" name="delete" value='Delete' onClick="return confirm('Tem certeza que quer deletar?')" />
						<input type="hidden" name="_method" value="DELETE" />
					</form>
				</div>
			</td>
		</tr>
	<% }) %>
	<% } %>

</table>

