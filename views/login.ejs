<% include ../views/partials/header %>

<div class="container py-5">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center mb-5">Bem vindo a página de login!</h2>
            <div class="row">
                <div class="col-md-6 mx-auto">
                    <span class="anchor" id="formLogin"></span>
                    <!-- formulario de login -->
                    <div class="card">
                        <div class="card-header">
                            <h3 class="mb-0">Login</h3>
                        </div>
                        <div class="card-body">
                          <% if (message.length > 0) { %>
                            <div class="alert alert-danger"><%= message %></div>
                              <% } %>
                            <form action='/login' class="form" role="form" autocomplete="off" id="formLogin" method="post">
                                <div class="form-group">
                                    <label for="username">Usuário</label>
                                    <input name="username" type="text" class="form-control" name="username" id="uname1">
                                </div>
                                <div class="form-group">
                                    <label for="password">Senha</label>
                                    <input name="password" type="password" class="form-control" id="pwd1" required="" autocomplete="new-password">
                                </div>
                                <div class="form-check small">
                                    <label class="form-check-label">
                                        <input type="checkbox" class="form-check-input"> <span>Lembre-se</span>
                                    </label>
                                </div>
                                <button type="submit" class="btn btn-success btn-lg float-right">Login</button>
                            </form>
                        </div>
                        <!--/card-block-->
                    </div>
                    <!-- /form card login -->
                </div>
            </div>
            <!--/row-->
          </div>
        <!--/col-->
    </div>
    <!--/row-->
</div>
<!--/container-->
